<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:vm="clr-namespace:RodriguezAgendaContactosApp.ViewModels"
             x:Class="RodriguezAgendaContactosApp.Views.ListaContactosPage"
             Title="ListaContactosPage">

    <ContentPage.BindingContext>
        <vm:ListaContactosViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource ="{Binding Contactos}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame,Margin ="10" BorderColor ="Gray">
                    <StackLayout>
                        <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                        <Label Text="{Binding Correo}" />
                        <Label Text="{Binding Telefono}" />
                        <Label Text="{Binding Favorito , StringFormat='Favorito : {0}'}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    
    
</ContentPage>